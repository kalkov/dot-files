san-ku-config() {
  echo $KUBE_CONFIG
}


san-wg-stage-up() {
  sudo wg-quick up wg-client-stage
}

san-wg-stage-down(){
  sudo wg-quick down wg-client-stage
}

san-wg-prod-up() {
  sudo wg-quick up wg-client-prod
}

san-wg-prod-down() {
  sudo wg-quick down wg-client-prod
}

san-wg-down() {
  sudo wg-quick down wg-client-stage
  sudo wg-quick down wg-client-prod
}

