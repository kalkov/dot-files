alias ku='kubectl'

kupods() {
  kubectl get pods | grep $1
}

remote_server() {
  kubectl exec -it $1 sh
}

kustage() {
    unset KUBECONFIG
    unset KUBE_CONFIG
    export KUBECONFIG=$KUBECONFIG:/home/merops/.kube/stage-config
    export KUBE_CONFIG=/home/merops/.kube/stage-config
}

kuprod() {
    unset KUBECONFIG
    unset KUBE_CONFIG
    export KUBECONFIG=$KUBECONFIG:/home/merops/.kube/prod-config
    export KUBE_CONFIG=/home/merops/.kube/prod-config
}

kuconfig() {
  echo $KUBE_CONFIG
}

